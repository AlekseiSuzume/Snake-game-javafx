                    <items>
                        <MenuItem mnemonicParsing="false" text="О разработчике" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="420.0" maxWidth="600.0" minHeight="420.0" minWidth="600.0" prefHeight="420.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="btnLeft" layoutX="435.0" layoutY="45.0" mnemonicParsing="false" text="Button" />
                <Button fx:id="btnRight" layoutX="538.0" layoutY="45.0" mnemonicParsing="false" text="Button" />
                <Button fx:id="btnUp" layoutX="486.0" layoutY="19.0" mnemonicParsing="false" text="Button" />
                <Button fx:id="btnDown" layoutX="486.0" layoutY="71.0" mnemonicParsing="false" text="Button" />
